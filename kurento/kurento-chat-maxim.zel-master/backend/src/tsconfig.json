{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "removeComments": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src"
    },
    "exclude": [
      "node_modules"
    ]
  }